{
  "name": "alleyinteractive/wp-block-debug",
  "description": "Block debug panel.",
  "license": "GPL-2.0-or-later",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Alley",
      "email": "info@alley.com"
    }
  ],
  "homepage": "https://github.com/alleyinteractive/wp-block-debug",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload-dev": {
    "psr-4": {
      "Alley\\WP\\Block_Debug\\Tests\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "alleyinteractive/composer-wordpress-autoloader": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    },
    "wordpress-autoloader": {
      "autoload": {
        "Alley\\WP\\Block_Debug\\": "src"
      }
    }
  },
  "scripts": {
    "lint": [
      "@phpcs",
      "@phpstan"
    ],
    "lint:fix": [
      "@phpcbf"
    ],
    "phpcbf": "phpcbf .",
    "phpcs": "phpcs .",
    "phpstan": "phpstan --memory-limit=512M",
    "phpunit": "phpunit",
    "release": "npx @alleyinteractive/create-release@latest",
    "test": [
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ],
    "tidy": "[ $COMPOSER_DEV_MODE -eq 0 ] || composer normalize"
  }
}
